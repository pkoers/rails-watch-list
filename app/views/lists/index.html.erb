<h1>Lists#index</h1>


<% @lists.each do |list| %>
<div class="card-product">
<% if list.thumbnail.present? %>
  <%= cl_image_tag list.thumbnail.key, height: 120, width: 120, crop: :fill %>
<% else %>
  <img src="https://res.cloudinary.com/pko-sch/image/upload/v1660914946/development/mo91twsrs9j0iq27tcgj0jh8m7vq.jpg" alt="" width="120" height="120">
<% end %>
  <div class="card-product-infos">
    <h2>
      <%= link_to list.name, list_path(list) %>
    </h2>
  </div>
</div>
<% end %>

<%= link_to "Add a new list", new_list_path %>
